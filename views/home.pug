html
    body
        link(href="/css/styles.css" rel="stylesheet")
        div.container
            div
                form(action="/logout", method="post")
                    input(type='text' name='auth_token' value=auth_token hidden)
                    input(type="submit", value="Logout")
            h1 Course Management System
            span Welcome #{name}!
            span(style='color: red') #{message}
            if isAdmin
                div.box 
                    h4 Add a New Course
                    form(action="/add", method="post")
                        input(type='text' name='auth_token' value=auth_token hidden)
                        table
                            tr
                                td
                                    span Course Code
                                td  
                                    input(type="text", name="courseCode")
                            tr
                                td
                                    span Course Name
                                td
                                    input(type="text", name="courseDesc")
                            tr
                                td
                                    span Starting Date
                                td  
                                    input(type="date", name="courseStartDate")
                            tr
                                td(colspan=2)
                                    input(type="submit", value="Add Course")
                div.box
                    h4 All Courses
                    if courseList.length
                        form(action="/course", method="post")
                            span Select a course to get more details about it
                            input(type="text", name="auth_token" value=auth_token hidden)
                            table
                                tr
                                    td
                                        select(name="courseCode")
                                            option(disabled selected) Select a course
                                            each course in courseList
                                                option(value=course.courseCode) #{course.courseDesc}
                                    td 
                                        input(type="submit", value="Go")
                        ul
                            each course in courseList
                                li #{course.courseDesc}
                    else
                        span No courses found

            else
                div.box
                    h4 My Courses
                    if registeredCourseList.length
                        form(action="/course", method="post")
                            span Select a course to get more details about it
                            input(type="text", name="auth_token" value=auth_token hidden)
                            table
                                tr
                                    td
                                        select(name="courseCode")
                                            option(disabled selected) Select a course
                                            each course in registeredCourseList
                                                option(value=course.courseCode) #{course.courseDesc}
                                    td
                                        input(type="submit", value="Go")
                        ul
                            each course in registeredCourseList
                                li #{course.courseDesc}
                    else
                        span No courses found

                div.box
                    h4 All Courses
                    if courseList.length
                        form(action="/course", method="post")
                            span Select a course to get more details about it
                            input(type="text", name="auth_token" value=auth_token hidden)
                            table
                                tr
                                    td
                                        select(name="courseCode")
                                            option(disabled selected) Select a course
                                            each course in courseList
                                                option(value=course.courseCode) #{course.courseDesc}
                                    td
                                        input(type="submit", value="Go")
                        ul
                            each course in courseList
                                li #{course.courseDesc}
                    else
                        span No courses found
